<template>
<div>
  <div class="page-infinite-wrapper">
    <mt-swipe :auto="4000">
      <mt-swipe-item class="slide1">1</mt-swipe-item>
      <mt-swipe-item class="slide2">2</mt-swipe-item>
      <mt-swipe-item class="slide3">3</mt-swipe-item>
    </mt-swipe>
    <ul class="page-infinite-list">
      <li v-for="item in list" class="page-infinite-listitem" v-on:click.stop="clickVideoList(item.id)">
        <div class="item-images">
          <img :src="item.imageUrl" alt="" width="100%">
        </div>
        <div class="item-bottom">
          <p>{{item.title}}<mt-badge size="small" class="badge">{{item.average}}</mt-badge></p>
          <span>{{item.addr}}</span>
        </div>
      </li>
    </ul>
    <infinite-loading @infinite="onInfinite" ref="infiniteLoading" spinner="spiral">
      <span slot="no-results">
        敬请期待 :(
      </span>
      <span slot="no-more">
        做人就要多读书 :(
      </span>
    </infinite-loading>
  </div>
</div>
</template>

<script>
import InfiniteLoading from 'vue-infinite-loading';
import { Toast } from 'mint-ui';
import { getUserListPage } from '../../api/api';
export default {
    components: {
    InfiniteLoading
  },
  data() {
    return {
      selected: '',
      list: [],
      infiniteLoading:true,
      wrapperHeight:''
    }
  },
  created: function () {
    // this.openToast()
  },
  methods: {
    //点击视频列表
    clickVideoList(scope){
      this.$router.push({ path: '/details', query: { id: scope }});
    },
    //上划加载更多
    onInfinite(state) {
      let para = {
					page: this.list.length / 10 + 1,
					rows: 10
			 };
      getUserListPage(para).then((res)=>{
        setTimeout(() => {
          if (res.data.data.length) {
            this.list = this.list.concat(res.data.data);
            state.loaded();
            if (this.list.length == res.data.total) {
              state.complete();
            }
          } else {
            state.complete();
          }
        }, 500);
      })
    },
    openToast() {
      Toast({
        message: '本网站所有内容仅供测试和学习交流，若侵犯了您的权益，请联系站长。',
        position: 'top',
        duration: 10000
      });
    },
  },
  mounted() {

  }
}
</script>

